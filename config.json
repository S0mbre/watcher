{
"watchers": [
{
	"path": "C:\\",
	"recursive": true,
	"types": ["*"],
	"ignore_types": null,
	"ignore_dirs": false,
	"case_sensitive": false,
	"handlers": [
	{
		"active": false,
		"events": ["cre", "del", "mod", "mov"],
		"type": "email",
		"from": "",
		"to": null,
		"subject": "WATCHER NOTIFICATION - {path}",
		"smtp": 
		{
			"server": "",
			"login": "",
			"password": "",
			"protocol": "SSL",
			"port": 465
		}
	},
	{
		"active": true,
		"events": ["cre", "del", "mod", "mov"],
		"type": "popup",
		"subject": "WATCHER NOTIFICATION - {path}",
		"timeout": 5,
		"icon": "auto",
		"ticker": "WATCHER NOTIFICATION - {path}"
	}
	]
}
],
"poll_interval": 5,
"logging": 
{
	"log": true,
	"file": null,
	"verbose": false,
	"send":
	{
		"active": false,
		"interval": 20,
		"from": "",
		"to": null,
		"subject": "WATCHER LOG [{dt}]",
		"smtp": 
		{
			"server": "",
			"login": "",
			"password": "",
			"protocol": "SSL",
			"port": 465
		},
		"zipped": true
	}
},
"proxy": 
{
	"useproxy": true,
	"server": null,
	"port": null,
	"type": "HTTP",
	"username": null,
	"password": null
}
}