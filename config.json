{
"watchers": [
{
	"path": "C:\\",
	"recursive": true,
	"types": ["*"],
	"ignore_types": null,
	"ignore_dirs": false,
	"case_sensitive": false,
	"handlers": [
	{
		"active": false,
		"events": ["cre", "del", "mod", "mov"],
		"type": "email",
		"emit": {
			"interval": 1,
			"unit": "m"
		},
		"from": "",
		"to": [],
		"subject": "WATCHER NOTIFICATION - {path}",
		"smtp": 
		{
			"server": "",
			"login": "",
			"password": "",
			"protocol": "SSL",
			"port": 465
		},
		"attachment": false,
		"zipped": false
	},
	{
		"active": true,
		"events": ["cre", "del", "mod", "mov"],
		"type": "popup",
		"emit": {
			"interval": 0,
			"unit": "s"
		},
		"subject": "WATCHER NOTIFICATION - {path}",
		"timeout": 5,
		"icon": "auto",
		"ticker": "WATCHER NOTIFICATION - {path}"
	}
	]
}
],
"poll_interval": 5,
"logging": 
{
	"log": true,
	"file": null,
	"restart": true,
	"verbose": false,
	"handlers": [
		{
			"active": false,
			"type": "email",
			"emit": {
				"interval": 30,
				"unit": "s"
			},
			"from": "",
			"to": [],
			"subject": "WATCHER LOG [{dt}]",
			"smtp": 
			{
				"server": "",
				"login": "",
				"password": "",
				"protocol": "SSL",
				"port": 465
			},
			"attachment": false,
			"zipped": true
		}
		]
},
"proxy": 
{
	"useproxy": true,
	"server": null,
	"port": null,
	"type": "HTTP",
	"username": null,
	"password": null
}
}